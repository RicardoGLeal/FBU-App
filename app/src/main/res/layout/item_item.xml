<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    style="@style/centreLocatorCardDesign">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    tools:srcCompat="@color/purple_700">
                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvItemName"
                            android:layout_width="wrap_content"
                            android:maxWidth="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            tools:text="Xbox One"/>

                        <ImageButton
                            android:id="@+id/iBtnSaveItem"
                            android:layout_width="24dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/ufi_save"
                            android:backgroundTint="@color/colorPrimary" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottieSaveAnimation"
                            android:layout_width="45dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="-10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="20dp"
                            android:visibility="gone"
                            app:lottie_autoPlay="false"
                            app:lottie_loop="false"
                            app:lottie_rawRes="@raw/lf30_editor_suvxspe4">

                        </com.airbnb.lottie.LottieAnimationView>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/open_sans"
                            android:text="Category:"></TextView>

                        <TextView
                            android:id="@+id/tvCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/open_sans"
                            tools:text="Electronics">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/open_sans"
                            android:text="Published by:"></TextView>

                        <TextView
                            android:id="@+id/tvOwnersName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/open_sans"
                            tools:text="Ricardo Gonzalez"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars">
            </ImageView>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:justificationMode="inter_word"
                android:fontFamily="@font/open_sans"
                tools:text="Trying to look hipster">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                    android:drawableTint="@color/colorPrimary"
                    android:fontFamily="@font/open_sans"
                    android:text="0">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD/DAY">
                </TextView>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/colorPrimary"
                    android:fontFamily="@font/open_sans"
                    tools:text="Menlo Park, CA 444444">
                </TextView>

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_6_ft_apart_24"
                    android:drawableTint="@color/colorPrimary"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/open_sans"
                    tools:text="50">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/tvPostDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="5dp"
                android:fontFamily="@font/open_sans"
                android:text="8 hours ago">
            </TextView>
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>